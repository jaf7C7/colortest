#!/bin/sh
#
# Prints color-test blocks

i=0
for bgv in 4 10
do
	if test $((bgv)) -eq 4
	then
		printf ' \033[7m  %s   \033[m' fg
	else
		printf '   %s   '  bg
	fi
	for bg in 0 1 2 3 4 5 6 7
	do
		printf ' \033[%d;%d%dm  %2d   \033[m' \
			$(($bg == 7 || $bg == 15 ? 0 : 97)) "$bgv" "$bg" "$i"
		i=$((i + 1))
	done
	printf '\n'
done
printf '\n'

for cap in '' '' 40m 41m 42m 43m 44m 45m 46m 47m
do
	printf '  %3s   ' "$cap"
done
printf '\n'

str='  gYw  '
for fg in 0 30 31 32 33 34 35 36 37
do
	for wgt in 0 1
	do
		cap='m'
		if test $((fg)) -ne 0
		then
			cap="${fg}${cap}"
		fi
		if test $((wgt)) -eq 1
		then
			if test $((fg)) -ne 0
			then
				cap=";${cap}"
			fi
			cap="1${cap}"
		fi
		# Stop 'fg' overriding 'wgt' for 'm' and '1m' lines.
		fg=$((wgt == 1  && fg == 0 ? 1 : fg)) 
		printf ' %5s ' "$cap"
		printf ' \033[%d;%dm%s\033[m' \
			"$wgt" "$fg" "$str"
		for bg in 0 1 2 3 4 5 6 7
		do
			printf ' \033[%d;%d;4%dm%s\033[m' \
				"$wgt" "$fg" "$bg" "$str"
		done
		printf '\n'
	done
done
